
# Program Konversi Suhu Sederhana

print("=== Konversi Suhu ===")
print("1. Celsius ke Fahrenheit")
print("2. Fahrenheit ke Celsius")

pilih = input("Pilih (1/2): ")

if pilih == "1":
    c = float(input("Masukkan suhu Celsius: "))
    f = (c * 9/5) + 32
    print(c, "째C =", round(f, 2), "째F")
elif pilih == "2":
    f = float(input("Masukkan suhu Fahrenheit: "))
    c = (f - 32) * 5/9
    print(f, "째F =", round(c, 2), "째C")
else:
    print("Pilihan tidak tersedia.")
