    # menghitung diskon belanja

total_belanja = 150000  # Total belanja dalam Rupiah
diskon_persen = 10      # Persentase diskon (misalnya 10% = 10)

# Hitung jumlah diskon
jumlah_diskon = (diskon_persen / 100) * total_belanja

# Hitung harga setelah diskon
harga_setelah_diskon = total_belanja - jumlah_diskon

print(f"Total belanja: Rp {total_belanja}")
print(f"Diskon ({diskon_persen}%): Rp {jumlah_diskon}")
print(f"Harga setelah diskon: Rp {harga_setelah_diskon}")


total_belanja = 110000
pake_kupon = False

if total_belanja >= 100000:
  if pake_kupon:
    diskon_persen = 10
  else:
    diskon_persen = 5
  jumlah_diskon = (diskon_persen / 100) * total_belanja
  harga_setelah_diskon = total_belanja - jumlah_diskon


  for i in range (0, 100, 2) :
  if i % 2 == 0:
    print (f"bilangan {i} adalah Genap")
  elif i % 2 == 1:
    print (f"bilangan {i} adalah ganjil")
  else:
    print ("salah")


    username = "admin"
password = "admin123"
login = False # Initialize login to False

count = 0
while count < 3: # Loop for a maximum of 3 attempts
  input_username = input ("username:")
  input_password = input ("password:")

  if input_username == username and input_password == password:
    print ("login berhasil")
    login = True # Set login to True on successful login
    break # Exit the loop on successful login
  else:
    print ("login gagal!, username atau password salah!")
  count = count + 1 # Increment count for each failed attempt

if not login: # Check if login was unsuccessful after 3 attempts
  print ("akun terkunci")
