x = int (input("masukkan nilai"))

print(luas(x))

x = 10

def ubah():
    global x 
    x = 30

ubah()
print(x)

def c_to_f(celsius):
    """
    Mengkonversi suhu dari Celsius ke Fahrenheit.
    Rumus: (Celsius * 9/5) + 32
    """
    fahrenheit = (celsius * 9/5) + 32
    return fahrenheit

def f_to_c(fahrenheit):
    """
    Mengkonversi suhu dari Fahrenheit ke Celsius.
    Rumus: (Fahrenheit - 32) * 5/9
    """
    celsius = (fahrenheit - 32) * 5/9
    return celsius

def hitung_total(harga_barang, jumlah_barang, diskon=0):
    """
    Menghitung total harga belanja setelah diskon.

    Parameter:
    harga_barang (float): Harga per barang.
    jumlah_barang (int): Jumlah barang yang dibeli.
    diskon (float): Persentase diskon dalam bentuk desimal (contoh: 0.10 untuk 10%).
                    Nilai default adalah 0.
    """
    # Hitung total harga awal sebelum diskon
    total_awal = harga_barang * jumlah_barang

    # Jika ada diskon, hitung total harga setelah diskon
    if diskon > 0:
        potongan_diskon = total_awal * diskon
        total_setelah_diskon = total_awal - potongan_diskon
        return total_setelah_diskon
    else:
        # Jika tidak ada diskon, kembalikan total awal
        return total_awal
