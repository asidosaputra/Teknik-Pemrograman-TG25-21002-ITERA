def hitung_harga_setelah_diskon(harga_awal):
  """Menghitung harga akhir setelah diskon 20%."""
  diskon = 0.20  # 20% diskon
  harga_akhir = harga_awal * (1 - diskon)
  return harga_akhir

harga_awal = 120000
harga_setelah_diskon = hitung_harga_setelah_diskon(harga_awal)
print(f"Harga awal: {harga_awal}")
print(f"Harga setelah diskon: {harga_setelah_diskon}")

def harga_diskon (harga,min_harga=100000, diskon=20) :
     if harga > min_harga:
        potongan_harga = (diskon*harga)/100
    else:
        potongan_harga = 0
      return harga - potongan_harga

harga_diskon (20000)

