m1 = 100
m2 = 200
r = 0.1

# Calculate F using the gaya_gravitasi function
F = gaya_gravitasi(m1, m2, r)

print(F)


def gaya_gravitasi (m1, m2, r, G=6.7e-11) :
    F = G*(m1*m2/r**2)
    return F

