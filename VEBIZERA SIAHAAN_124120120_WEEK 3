SAPA
def sapa (nama):
  print (f"Hallo {nama}, selamat pagi!")

nama = "vebi"
sapa (nama)


LUAS PERSEGI
def luas_persegi(sisi):
  luas = sisi*sisi
  return luas

hasil = luas_persegi(8)

print(hasil)


ARGS
def total(*args):
    return sum(args)

args = total(1,2,3,4, 5)

print(args)


HARGA DISKON
def harga_diskon(harga, min_harga=100000, diskon=20):
    if harga > min_harga:
        potongan_harga = (diskon * harga) / 100
        return harga - potongan_harga
    else:
        potongan_harga = 0
        return harga - potongan_harga

harga_diskon(120000)


CHALLEGE
