    nilai = 90

if nilai >= 90:
  print("A")
elif nilai >= 80:
  print("B")
elif nilai >= 70:
    print("B")
elif nilai >= 60:
    print("BC")
else:
    print("C")

    for i in range(0, 100, 2):
    if i % 2 == 0:
      print (f'bilangan {i} bilangan genap')
    elif i %2 ==1:
      print (f'bilangan {i} bilangan ganjil')
    else:
      print(f"bilangan {i} bukan bilangan bulat")

      total_belanja = 120.000
pake_kupon = True

diskon = 0  

if total_belanja >= 100.000:
    if pake_kupon:
        diskon = 0.2 * total_belanja 

    total_bayar = total_belanja - diskon
    print("Total Belanja : Rp", total_belanja)
    print("Diskon        : Rp", diskon)
    print("Total Bayar   : Rp", total_bayar)
else:
    print("Belanja kurang dari Rp. 100.000")

