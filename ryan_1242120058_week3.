  def harga_diskon(harga, min_harga=100000, diskon=0.2):
  if harga > min_harga:
    potongan_harga = harga * diskon
    harga = harga - potongan_harga
  else:
    potongan_harga = 0
  return harga
  harga_diskon(120000)


               
